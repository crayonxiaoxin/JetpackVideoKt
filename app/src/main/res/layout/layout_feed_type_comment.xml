<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="feed"
            type="Feed" />

        <variable
            name="lifeCycleOwner"
            type="androidx.lifecycle.LifecycleOwner" />

        <import type="com.github.crayonxiaoxin.ppjoke_kt.model.Feed" />

        <import type="android.view.View" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="@dimen/dp_10">

        <include
            layout="@layout/layout_feed_author"
            app:user="@{feed.topComment.author}" />

        <include
            layout="@layout/layout_feed_text"
            app:feedText="@{feed.topComment.commentText}"
            app:lines="@{3}" />

        <com.github.crayonxiaoxin.lib_common.view.CornerLinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginHorizontal="@dimen/dp_16"
            android:background="@color/color_gray2"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:clipRadius="@dimen/dp_6"
            app:clipSide="all">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingHorizontal="@dimen/dp_10"
                android:singleLine="true"
                android:text="@{feed.feeds_text}"
                android:textColor="@color/color_000"
                android:textSize="@dimen/sp_14" />

            <FrameLayout
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40">

                <com.github.crayonxiaoxin.ppjoke_kt.ui.view.PPImageView
                    android:id="@+id/icon_cover"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    app:clipRadius="@dimen/dp_6"
                    app:clipSide="right"
                    app:image_url="@{feed.cover}" />

                <ImageView
                    android:id="@+id/icon_video"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_10"
                    android:src="@drawable/icon_video_play"
                    android:visibility="@{feed.itemType==Feed.TYPE_VIDEO?View.VISIBLE:View.GONE}" />
            </FrameLayout>

        </com.github.crayonxiaoxin.lib_common.view.CornerLinearLayout>

        <include
            layout="@layout/layout_feed_tag"
            app:tagText="@{feed.activityText}" />

        <include
            layout="@layout/layout_feed_interaction"
            app:feed="@{feed}"
            app:lifeCycleOwner="@{lifeCycleOwner}" />

    </LinearLayout>
</layout>